@using panel.Models
@model Industry

<div class="container mt-3">
    <h1>Sektör Ekle</h1>
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="/">Anasayfa</a></li>
            <li class="breadcrumb-item active" aria-current="page">Sektör Ekle</li>
        </ol>
    </nav>
    <form class="mt-5" method="post" enctype="multipart/form-data" asp-action="CreateIndustry" asp-antiforgery="true">
        <div class="text-danger" asp-validation-summary="ModelOnly"></div>
        <div class="form-group mt-3">
            <label asp-for="Description">Açıklma</label>
            <input asp-for="Description" class="form-control">
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>
      
        <div class="form-group mt-3">
            <label asp-for="ImageFile" style="display:block;">Görsel</label>
            <input asp-for="ImageFile" type="file" class="form-control-file mt-1">
            <span asp-validation-for="ImageFile" class="text-danger"></span>
        </div>

        <div class="d-flex align-items-center justify-content-between mt-4 mb-0">
            <button type="submit" class="btn btn-primary">Kaydet</button>
        </div>


    </form>
</div>