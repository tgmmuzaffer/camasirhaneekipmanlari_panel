@using panel.Models.Dtos
@model ReferanceDto

<script src="//cdn.ckeditor.com/4.17.1/full/ckeditor.js"></script>

<div class="container mt-3">
    <h1>Referans Güncelle</h1>
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="/">Anasayfa</a></li>
            <li class="breadcrumb-item active" aria-current="page">Referans Güncelle</li>
        </ol>
    </nav>
    <form class="mt-5" method="post" enctype="multipart/form-data" asp-action="UpdateReferanceContent" asp-antiforgery="true">
        <div class="text-danger" asp-validation-summary="ModelOnly"></div>
        <input type="hidden" asp-for="Id" value="@Model.Id" />
        <div class="form-group mt-3">
            <label asp-for="Name">Firma Adı</label>
            <input asp-for="Name" class="form-control" value="@Model.Name" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <div class="form-group mt-3">
            <label asp-for="ShortDescription">Kısa Açıklma</label>
            <input asp-for="ShortDescription" class="form-control" value="@Model.ShortDescription" />
            <span asp-validation-for="ShortDescription" class="text-danger"></span>
        </div>

        <div class="form-group mt-3">
            <label asp-for="Description">Açıklaması</label>
            <textarea asp-for="Description" id="Description" class="ckeditor" name="Description" rows="200">@Model.Description</textarea>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>

        <div class="form-group mt-3">
            <label asp-for="Image" style="display:block;">Firma Görseli</label>
            <img src="~/images/webpImages/@Model.ImageName" style="max-width:300px; max-height:300px;" />
            <input asp-for="Image" type="file" class="form-control-file mt-1" style="display:block" />
            <span asp-validation-for="Image" class="text-danger"></span>
        </div>

        <div class="d-flex align-items-center justify-content-between mt-4 mb-0">
            <button type="submit" class="btn btn-primary">Kaydet</button>
        </div>
    </form>
</div>
<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script>
    $(document).ready(function () {
        CKEDITOR.replace('#Description');
    });

</script>