@using panel.Models
@model User
@{
    Layout = "~/Views/Shared/_LayoutLogin.cshtml";
    ViewBag.Title = "Home Page";
}
<div class="container">
    <div class="row justify-content-center">
        <div class="col-lg-5">
            <div class="card shadow-lg border-0 rounded-lg mt-5" style="background-color:transparent;">
                <div class="card-header"><h3 class="text-center font-weight-light my-4">Kayıt Ol</h3></div>
                <div class="card-body">
                    <form method="post" enctype="multipart/form-data" asp-action="RegisterUser" asp-antiforgery="true">
                        <div class="text-danger" asp-validation-summary="ModelOnly"></div>

                        <div class="form-floating mb-3">
                            <input asp-for="UserName" class="form-control" type="email" autocomplete="off"/>
                            <span asp-validation-for="UserName" class="text-danger"></span>
                            <label for="inputEmail">E-Posta Adresi</label>
                        </div>
                        <div class="form-floating mb-3">
                            <input asp-for="Password" class="form-control" type="password" placeholder="Şifre" autocomplete="off"/>
                            <span asp-validation-for="Password" class="text-danger"></span>
                            <label for="inputPassword">Şifre</label>
                        </div>
                        <div class="d-flex align-items-center justify-content-between mt-4 mb-0">
                            <a class="small" href="/login">Zaten bir hesabın var</a>
                            <button type="submit" class="btn btn-primary">Kayıt Ol</button>
                        </div>
                       
                    </form>
                </div>

            </div>
        </div>
    </div>
</div>
@section scripts{
    <partial name="_ValidationScriptsPartial" />
}