@using panel.Models.Dtos
@model CategoryDto
@{
    var productProperties = new List<SelectListItem>();
    if (ViewBag.ProductPropertyList != null)
    {
        productProperties = ViewBag.ProductPropertyList as List<SelectListItem>;
    }
}
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha256-YLGeXaapI0/5IgZopewRJcFXomhRMlYYjugPLSyNjTY=" crossorigin="anonymous" />
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-select@1.13.9/dist/css/bootstrap-select.min.css">
<div class="container mt-3">
    <h1>Kategori Ekle</h1>
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="/">Anasayfa</a></li>
            <li class="breadcrumb-item active" aria-current="page">Kategori Ekle</li>
        </ol>
    </nav>


    <form class="mt-5" method="post" enctype="multipart/form-data" asp-action="CreateCategory" asp-antiforgery="true">

        <div class="form-group mt-3">
            <label asp-for="Name">Kategori Adı</label>
            <input asp-for="Name" class="form-control">
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        @* Tüm özellikler gelicek   *@

        @*
               Product Tablosuna category Id eklenicek
            categories tabşlosundan product ıd çıkarılacak
                product properties tanblosundsan category Id çıkarılacak
                product property ile category lerin id lerinin tutulduğun bir tablo yapılacak



        *@

        <div class="form-group mt-3">
            <label style="display:block"> Özellikler</label>
            <select multiple class="selectpicker" asp-for="ProductPropertyIds" data-none-selected-text="En az bir özellik seçiniz">
                @foreach (var item in productProperties)
                {
                    <option value="@item.Value">@item.Text</option>
                }
            </select>
        </div>


        <div class="d-flex align-items-center justify-content-between mt-4 mb-0">
            <button type="submit" class="btn btn-primary">Kaydet</button>
        </div>
    </form>

</div>
<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.11.0/umd/popper.min.js" integrity="sha384-b/U6ypiBEHpOf/4+1nzFpr53nxSS+GLCkfwBdFNTxtclqqenISfwAzpKaMNFNmj4" crossorigin="anonymous"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap-select@1.13.9/dist/js/bootstrap-select.min.js"></script>