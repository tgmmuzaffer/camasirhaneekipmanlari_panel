@using panel.Models
@model Category
@{
    var productProperties = new List<SelectListItem>();
    if (ViewBag.ProductPropertyList != null)
    {
        productProperties = ViewBag.ProductPropertyList as List<SelectListItem>;
    }
}
<div class="container mt-3">
    <h1>Kategori Güncelle</h1>
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="/">Anasayfa</a></li>
            <li class="breadcrumb-item active" aria-current="page">Kategori Güncelle</li>
        </ol>
    </nav>


    <form class="mt-5" method="post" enctype="multipart/form-data" asp-action="UpdateCategoryContent" asp-antiforgery="true">
        <input type="hidden" asp-for="@Model.Id" value="@Model.Id" />
        <div class="form-group mt-3">
            <label asp-for="Name">Kategori Adı</label>
            <input asp-for="Name" class="form-control" value="@Model.Name">
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="form-group mt-3">
            <label asp-for="ShortDesc">Kategori Açıklaması</label>
            <input asp-for="ShortDesc" class="form-control" value="@Model.ShortDesc">
            <span asp-validation-for="ShortDesc" class="text-danger"></span>
        </div>
        <div class="form-group mt-3">
            <label asp-for="ImageFile" style="display:block;">Ürün Görseli</label>
            @if (!string.IsNullOrEmpty(Model.ImagePath))
            {
                <img src="~/images/webpImages/@Model.ImagePath" style="max-width:300px; max-height:300px;" />
            }
            <input asp-for="ImageFile" type="file" class="form-control-file mt-1">
            <span asp-validation-for="ImageFile" class="text-danger"></span>
        </div>
        <div class="d-flex align-items-center justify-content-between mt-4 mb-0">
            <button type="submit" class="btn btn-primary">Kaydet</button>
        </div>
    </form>

</div>