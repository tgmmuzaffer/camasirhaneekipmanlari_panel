@using panel.Models
@model Slider


<div class="container mt-3">
    <h1>Slider Güncelle</h1>
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="/">Anasayfa</a></li>
            <li class="breadcrumb-item active" aria-current="page">Slider Güncelle</li>
        </ol>
    </nav>
    <form class="mt-5" method="post" enctype="multipart/form-data" asp-action="UpdateSliderContent" asp-antiforgery="true">
        <div class="text-danger" asp-validation-summary="ModelOnly"></div>
        <input type="hidden" asp-for="Id" value="@Model.Id" />
        <div class="form-group mt-3">
            <label asp-for="SliderName">Slider Adı</label>
            <input asp-for="SliderName" class="form-control" value="@Model.SliderName">
            <span asp-validation-for="SliderName" class="text-danger"></span>
        </div>

        <div class="form-group mt-3">
            <label asp-for="Content1">Slider Açıklma 1</label>
            <input asp-for="Content1" class="form-control" value="@Model.Content1">
            <span asp-validation-for="Content1" class="text-danger"></span>
        </div>

        <div class="form-group mt-3">
            <label asp-for="Content2">Slider Açıklma 2</label>
            <input asp-for="Content2" class="form-control" value="@Model.Content2">
            <span asp-validation-for="Content2" class="text-danger"></span>
        </div>

        <div class="form-group mt-3">
            <label asp-for="Content3">Slider Açıklma 3</label>
            <input asp-for="Content3" class="form-control" value="@Model.Content3">
            <span asp-validation-for="Content3" class="text-danger"></span>
        </div>

        <div class="form-group mt-3">
            <label asp-for="Link">Buton Link</label>
            <input asp-for="Link" class="form-control" value="@Model.Link">
            <span asp-validation-for="Link" class="text-danger"></span>
        </div>

        <div class="form-group mt-3">
            <label asp-for="ButtonName">Buton Adı</label>
            <input asp-for="ButtonName" class="form-control" value="@Model.ButtonName">
            <span asp-validation-for="ButtonName" class="text-danger"></span>
        </div>

        <div class="form-group mt-3">
            <label asp-for="Image" style="display:block;">Slider Görseli</label>
            <img src="~/images/webpImages/@Model.ImageName" style="max-width:300px; max-height:300px;" />
            <input asp-for="Image" type="file" class="form-control-file mt-1" style="display:block;">
            <span asp-validation-for="Image" class="text-danger"></span>
        </div>
        <div class="form-group mt-3">
            <label asp-for="IsShow" style="display:block;">Slider Aktif Mi?</label>
            @{
                if (Model.IsShow)
                {
                    <input asp-for="IsShow" type="checkbox" checked value="true" class="form-control-file" >
                }
                else
                {
                    <input asp-for="IsShow" type="checkbox" value="false" class="form-control-file">
                }
            }
        </div>

        <div class="d-flex align-items-center justify-content-between mt-4 mb-0">
            <button type="submit" class="btn btn-primary">Kaydet</button>
        </div>
    </form>
</div>
