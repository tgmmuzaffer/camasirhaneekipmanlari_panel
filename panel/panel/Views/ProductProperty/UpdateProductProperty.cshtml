@using panel.Models
@model ProductProperty

<div class="container mt-3">
    <h1>Özellik Güncelle</h1>
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="/">Anasayfa</a></li>
            <li class="breadcrumb-item active" aria-current="page">Özellik Güncelle</li>
        </ol>
    </nav>


    <form class="mt-5" method="post" enctype="multipart/form-data" asp-action="UpdateProductPropertyContent" asp-antiforgery="true">
        <input type="hidden" asp-for="Id" value="@Model.Id"/>
        <div class="form-group mt-3">
            <label asp-for="Name">Özellik Adı</label>
            <input asp-for="Name" class="form-control">
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="d-flex align-items-center justify-content-between mt-4 mb-0">
            <button type="submit" class="btn btn-primary">Kaydet</button>
        </div>
    </form>

</div>